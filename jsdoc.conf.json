{
  "source": {
    "include": ["./src/"],
    "includePattern": "\\.(js|ts)$",
    "exclude": ["node_modules/", "dist/", "coverage/"]
  },
  "opts": {
    "destination": "./docs/",
    "recurse": true
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}